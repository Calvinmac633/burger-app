<div class="container">

  <div class="headers">
    <div class="row">
      <img id="burgerPic" src="https://i.ya-webdesign.com/images/hamburger-svg-beef-burger-6.png">
    </div>
    <div class="row">
      <h1>Eat-a-Burger!</h1>
    </div>
  </div>

  <h2>Burgers that have not been eaten!</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger/burger-block eat=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Burgers that are eaten!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger/burger-block eat=false}}
    {{/if}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured!<br>
      <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>


</div>